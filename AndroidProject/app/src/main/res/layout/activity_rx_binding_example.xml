<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        tools:context=".rxbinding.RxBindingExampleActivity">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:text="Click event test"
            android:textColor="@color/black"
            android:textSize="20sp"
            android:textStyle="bold" />

        <Button
            android:id="@+id/btn_binding_click"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="click 이벤트 테스트" />

        <TextView
            android:id="@+id/tv_click_time"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:text="Click event + Throttle 조합"
            android:textColor="@color/black"
            android:textSize="20sp"
            android:textStyle="bold" />

        <Button
            android:id="@+id/btn_throttle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Click + throttle 테스트" />

        <TextView
            android:id="@+id/tv_click_time_throttle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:text="Text change event test"
            android:textColor="@color/black"
            android:textSize="20sp"
            android:textStyle="bold" />

        <EditText
            android:id="@+id/et_text_change"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="textChanges event test" />

        <TextView
            android:id="@+id/tv_edit_text_result"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="입력 된 text : " />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:text="Text change + debounce 조합"
            android:textColor="@color/black"
            android:textSize="20sp"
            android:textStyle="bold" />

        <EditText
            android:id="@+id/et_search"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="검색어를 입력 해 주세요." />

        <TextView
            android:id="@+id/tv_search_text"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

    </LinearLayout>

</layout>